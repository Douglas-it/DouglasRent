@model EmprestimosModel
<!-- Model that will be passed to the view, in this case, a single loan -->
@{
    ViewData["Title"] = "Excluir Empréstimo";  @* Title of the page *@


}
<div class="container bg-dark p-5 rounded-5">
    <!-- Container that will hold the content -->

    <div class="mb-3 text-center">
        <h1 class="text-light">Exclusão de Registros</h1>

    </div>


    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
        <input type="hidden" asp-for="id" />
        <h2 class="text-light">Você tem certeza que deseja excluir o empréstimo?</h2>

        <div class="mb-3">
            <label for="Recebedor " class="form-label text-light">Recebedor</label>
            <input type="text" class="form-control text-light" asp-for="Recebedor" id="recebedor" placeholder="Quem está recebendo o livro?" disabled>
            <span class="text-danger" asp-validation-for=" Recebedor"> </span>
        </div>
        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor</label>
            <input type="text" class="form-control text-light" asp-for="Fornecedor" id="Fornecedor " placeholder="Quem está emprestando o livro?" disabled>
            <span class="text-danger" asp-validation-for=" Fornecedor "> </span>
        </div>
        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Livro</label>
            <input type="text" class="form-control text-light" asp-for="LivroEmprestado" id="Livro" placeholder="Qual é o Livro Que está sendo emprestado?" disabled>
            <span class="text-danger" asp-validation-for=" LivroEmprestado "> </span>
        </div>
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button> @* Button to add the loan *@
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="index"> Voltar   </a>
        </div>
    </form>
</div>
