@model IEnumerable< EmprestimosModel > // Model that will be passed to the view in enumeration because it is a list of loans


<table class="table table-dark table-hover">  // Table that will display the list of loans in the view
    <thead>
        <tr>
            <th scope="col">Recebedor</th>   // Table headers
            <th scope="col">Fornecedor</th>     
            <th scope="col">Livro</th>
            <th scope="col">Ultima Atualização</th>
        </tr>
    </thead>
    <tbody>
        
        @if (Model != null) /* If the model is not null, it will display the list of loans */
        
        {
            foreach(var emprestimo in Model)  
            
            {
                <tr>
                    <th scope="row">@emprestimo.Recebedor</th> 
                    <td>@emprestimo.Fornecedor</td>
                    <td>@emprestimo.LivroEmprestado</td>
                    <td>@emprestimo.DataUltimaUtilizacao</td>
                </tr>
            }
        }
       
    </tbody>
</table>
